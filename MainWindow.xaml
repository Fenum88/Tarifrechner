<Window x:Class="Tarifrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarifrechner"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <!-- Navigation Bar -->
        <StackPanel Orientation="Horizontal" Background="LightGray" Height="50" VerticalAlignment="Top">
            <Button Content="Eingabe" Width="100" Margin="10" Click="NavigateToEingabe"/>
            <Button Content="Ausgabe" Width="100" Margin="10" Click="NavigateToAusgabe"/>
        </StackPanel>

        <!-- Frame für Seiteninhalt -->
        <Frame Name="MainFrame" Margin="0,50,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>


</Window>
